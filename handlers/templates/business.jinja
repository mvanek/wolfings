{% extends "base.jinja" %}
{% from "coupon_snip.jinja" import coupon_snip %}


{% block title %}{{name}}{% endblock title %}


{% block head %}{{ super() }}
<link rel="stylesheet" type="text/css" href="/static/style/business.css">
<link rel="stylesheet" type="text/css" href="/static/style/coupon_snip.css">
{% endblock head %}


{% block body %}

<section>
    <header>
        {% if b.mark_url %}
        <img class="mark" alt="{{b.name}}" src="{{b.mark_url}}">
        {% endif %}
        {{b.name}}
    </header>
</section>

{% if coupons %}
<section id="coupons">
    {% for c in coupons %}
    {{ coupon_snip(c, now, user=user) }}
    {% endfor %}
</section>
{% endif %}

{% endblock body %}
