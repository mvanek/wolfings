{% extends "base.jinja" %}
{% from "coupon_snip.jinja" import coupon_snip %}


{% block title %}{{ name }}{% endblock title %}


{% block head %}{{ super() }}
        <link rel="stylesheet" type="text/css" href="/static/style/coupon_snip.css">
{% endblock head %}


{% block body %}
        <section>
            <header>
    {% if mark_url %}
                <img class="mark" alt="{{ name }}" src="{{ mark_url }}">
    {% endif %}
                {{ name }}
            </header>
        </section>
    {% if coupons %}
        <section id="coupons">
            {% for c in coupons %}
                {{ coupon_snip(c, now, show_holders=True, admin=True) }}
            {% endfor %}
        </section>
    {% endif %}

{% endblock body %}
