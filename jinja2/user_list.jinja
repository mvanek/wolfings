{% extends "base.jinja" %}


{% block title %}User List{% endblock title %}


{% block head %}{{ super() }}
<link rel="stylesheet" type="text/css" href="/static/style/business.css">
{% endblock head %}


{% block body %}
<header>Users</header>
<section id="users">
    {% for u in user_list %}
    <p id="u{{u.id}}">
    <a href="/user/{{u.id}}/">{{ u.email }}</a>
    </p>
    {% endfor %}
</section>
{% endblock body %}
